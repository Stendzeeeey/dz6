//В массиве из n чисел найти локальный минимум, используя указатели
#include <pt4.h>
using namespace std;

Void Solve()
{
Task("TheMassiv29");
int n, k = 0;

pt >> n;
int* x = new int[n];
{
    pt >> *(x+i)
}
for (int i = 1; i < n; i++)
{
    if ((*(x+i-1) < *(x+i)) && (*(x+i) >  *(x+i=1)))
    {
            k+=1;
            pt << i;
        }
    }
    delete[]x;
    pt << k;
}
